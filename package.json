{
  "name": "@gannonh/memento-mcp",
  "version": "0.3.0",
  "description": "Memento MCP: Knowledge graph memory system for LLMs",
  "license": "MIT",
  "author": "Gannon Hall",
  "homepage": "https://github.com/gannonh/memento-mcp",
  "bugs": "https://github.com/gannonh/memento-mcp/issues",
  "type": "module",
  "bin": {
    "mcp-server-memento": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gannonh/memento-mcp.git"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc && shx chmod +x dist/*.js",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:verbose": "clear && vitest run --reporter verbose",
    "test:integration": "TEST_INTEGRATION=true npm test",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "neo4j:init": "tsx src/cli/neo4j-setup.ts init",
    "neo4j:test": "tsx src/cli/neo4j-setup.ts test"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.8.0",
    "axios": "^1.8.4",
    "dotenv": "^16.4.7",
    "lru-cache": "^11.1.0",
    "neo4j-driver": "^5.28.1",
    "openai": "^4.90.0",
    "ts-node": "^10.9.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/lru-cache": "^7.10.10",
    "@types/node": "^22",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "glob": "^11.0.1",
    "prettier": "^3.5.3",
    "rimraf": "^6.0.1",
    "shx": "^0.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1",
    "zod": "^3.24.2"
  },
  "overrides": {
    "glob": "^11.0.1",
    "rimraf": "^6.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }

}
